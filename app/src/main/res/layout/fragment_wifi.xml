<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WifiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/shape_container_wifi_details"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informações do wifi"
            android:textSize="28dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/DisconnectedWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/wifi_datails_card"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp"

                >

                <TextView
                    android:id="@+id/wifiStatusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="start|right"
                    android:text="Status: "
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/wifiStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/wifi_datails_card"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/SSIDLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSID: "
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/SSID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/wifi_datails_card"
                android:paddingHorizontal="20dp"
                android:layout_marginBottom="10dp"
                >
                <TextView
                    android:id="@+id/wifiFrequencyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequência do wifi: "
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/wifiFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/wifi_datails_card"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="20dp"
                >
                <TextView
                    android:id="@+id/wifiMACAdressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço MAC: "
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>
                <TextView
                    android:id="@+id/wifiMACAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="18dp"
                    android:layout_marginVertical="35dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:gravity="start"/>

            </LinearLayout>

        </LinearLayout>

